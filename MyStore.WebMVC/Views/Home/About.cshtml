@{
    ViewData["Title"] = "About Us";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">About Us</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Page Header -->
<div class="row mb-5">
    <div class="col-12 text-center">
        <h1 class="display-4 mb-3">About MyStore</h1>
        <p class="lead">Learn more about our mission, vision, and the team behind MyStore</p>
    </div>
</div>

<!-- Company Story -->
<div class="row mb-5">
    <div class="col-md-6">
        <h2>Our Story</h2>
        <p class="text-muted">
            Founded in 2020, MyStore began as a small online retailer with a simple mission: 
            to provide high-quality products at affordable prices while delivering exceptional customer service.
        </p>
        <p class="text-muted">
            What started as a dream has grown into a trusted e-commerce platform serving thousands 
            of customers worldwide. We believe that shopping should be convenient, secure, and enjoyable.
        </p>
        <div class="d-flex align-items-center mt-4">
            <i class="fas fa-quote-left fa-2x text-primary me-3"></i>
            <blockquote class="blockquote">
                <p class="mb-0">"Customer satisfaction is not just our goal, it's our commitment."</p>
                <footer class="blockquote-footer mt-2">MyStore Team</footer>
            </blockquote>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <i class="fas fa-store fa-5x text-primary mb-4"></i>
                    <h5>Trusted by thousands</h5>
                    <p class="text-muted">Join our growing community of satisfied customers</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mission & Vision -->
<div class="row mb-5">
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-primary">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-bullseye me-2"></i>Our Mission</h4>
            </div>
            <div class="card-body">
                <p class="card-text">
                    To revolutionize online shopping by providing a seamless, secure, and personalized 
                    experience that connects customers with the products they love while building lasting relationships 
                    based on trust and excellence.
                </p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Quality products</li>
                    <li><i class="fas fa-check text-success me-2"></i>Competitive prices</li>
                    <li><i class="fas fa-check text-success me-2"></i>Excellent service</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-success">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-eye me-2"></i>Our Vision</h4>
            </div>
            <div class="card-body">
                <p class="card-text">
                    To become the leading global e-commerce platform recognized for innovation, 
                    sustainability, and customer-centric solutions that enhance the lives of people 
                    and communities worldwide.
                </p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-globe text-primary me-2"></i>Global reach</li>
                    <li><i class="fas fa-leaf text-success me-2"></i>Sustainable practices</li>
                    <li><i class="fas fa-users text-info me-2"></i>Community focus</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Core Values -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Our Core Values</h2>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="text-center">
                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-heart fa-2x text-white"></i>
                    </div>
                    <h5>Customer First</h5>
                    <p class="text-muted">Every decision we make is guided by what's best for our customers.</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center">
                    <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-handshake fa-2x text-white"></i>
                    </div>
                    <h5>Integrity</h5>
                    <p class="text-muted">We conduct business with honesty, transparency, and ethical practices.</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center">
                    <div class="bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-lightbulb fa-2x text-white"></i>
                    </div>
                    <h5>Innovation</h5>
                    <p class="text-muted">We continuously improve and embrace new technologies and ideas.</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="text-center">
                    <div class="bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-medal fa-2x text-white"></i>
                    </div>
                    <h5>Excellence</h5>
                    <p class="text-muted">We strive for excellence in everything we do, from products to service.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Team Section -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Meet Our Team</h2>
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-user fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title">Development Team</h5>
                        <p class="text-muted">Passionate developers creating amazing experiences</p>
                        <div class="social-links">
                            <a href="#" class="text-decoration-none me-2"><i class="fab fa-linkedin"></i></a>
                            <a href="#" class="text-decoration-none me-2"><i class="fab fa-github"></i></a>
                            <a href="#" class="text-decoration-none"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-users fa-3x text-white"></i>
                        </div>
                        <h5 class="card-title">Customer Support</h5>
                        <p class="text-muted">Dedicated team ensuring customer satisfaction</p>
                        <div class="social-links">
                            <a href="#" class="text-decoration-none me-2"><i class="fab fa-linkedin"></i></a>
                            <a href="#" class="text-decoration-none me-2"><i class="fas fa-envelope"></i></a>
                            <a href="#" class="text-decoration-none"><i class="fas fa-phone"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="row">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body text-center py-5">
                <h3>Join Our Journey</h3>
                <p class="lead mb-4">Be part of the MyStore community and experience the difference</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg">
                        <i class="fas fa-envelope me-2"></i>Contact Us
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>